# Database Configuration
POSTGRES_USER=bookmarks
POSTGRES_PASSWORD=bookmarks
POSTGRES_DB=bookmarks
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5435/${POSTGRES_DB}

# Auth0 Configuration
# AUTH0_DOMAIN: Applications -> Your App -> Settings -> Domain
AUTH0_DOMAIN=your-tenant.us.auth0.com
# AUTH0_AUDIENCE: Applications -> APIs -> Your API -> Identifier
AUTH0_AUDIENCE=bookmarks-api
# AUTH0_CLIENT_ID: Applications -> Your App -> Settings -> Client ID
AUTH0_CLIENT_ID=your-client-id

# CORS Configuration
# Comma-separated list of allowed origins for cross-origin requests
CORS_ORIGINS=http://localhost:5173

# Development Mode
# DEV_MODE=true   -> Bypasses auth, uses fake dev user (quick local dev)
# DEV_MODE=false  -> Real Auth0 authentication (test actual login flow)
DEV_MODE=true
