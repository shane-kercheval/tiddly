# =============================================================================
# Bookmarks Application Configuration
# Copy this file to .env and update values for your environment.
# =============================================================================

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
POSTGRES_USER=bookmarks
POSTGRES_PASSWORD=bookmarks
POSTGRES_DB=bookmarks
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5435/${POSTGRES_DB}

# -----------------------------------------------------------------------------
# Auth0 (shared between backend and frontend)
# Get these from: Auth0 Dashboard -> Applications -> Your App -> Settings
# -----------------------------------------------------------------------------
AUTH0_DOMAIN=your-tenant.us.auth0.com
AUTH0_AUDIENCE=bookmarks-api
AUTH0_CLIENT_ID=your-client-id

# -----------------------------------------------------------------------------
# Backend Settings
# -----------------------------------------------------------------------------
# CORS: Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173

# Development mode: bypasses auth, uses fake dev user
# Set to false to test real Auth0 authentication
DEV_MODE=true

# -----------------------------------------------------------------------------
# Frontend Settings (VITE_ prefix required for Vite to expose to browser)
# -----------------------------------------------------------------------------
VITE_API_URL=http://localhost:8000

# Frontend Auth0: Leave empty for dev mode (no authentication required)
# Set these to enable Auth0 authentication in the frontend
VITE_AUTH0_DOMAIN=
VITE_AUTH0_CLIENT_ID=
VITE_AUTH0_AUDIENCE=
