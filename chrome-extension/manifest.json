{
  "manifest_version": 3,
  "name": "Tiddly Bookmarks",
  "version": "0.2.0",
  "description": "Save bookmarks to Tiddly with one click",
  "permissions": ["activeTab", "storage", "scripting", "favicon"],
  "host_permissions": [
    "https://api.tiddly.me/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  }
}
